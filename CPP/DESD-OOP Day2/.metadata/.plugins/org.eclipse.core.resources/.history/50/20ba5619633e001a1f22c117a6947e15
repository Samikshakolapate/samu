#include <iostream>
using namespace std;

int main()
{

	int a=100;
	int &r=a;
	cout<< " a = "<<a <<" &a "<<&a<<endl;
	cout<< " r = "<<r <<" &r "<<&r<<endl;
	a++;
	cout<<"\n after incrementing a";
	cout<< " a = "<<a <<" &a "<<&a<<endl;
	cout<< " r = "<<r <<" &r "<<&r<<endl;



	return 0;
}
