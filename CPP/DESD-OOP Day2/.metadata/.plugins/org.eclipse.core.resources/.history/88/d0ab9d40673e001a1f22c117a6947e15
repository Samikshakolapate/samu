#include <iostream>
using namespace std;
//we can not return reference variable as a return value from a function
//following code will get terminated as (exit -value =-1)
int* getNumber( void )
{
	int number = 10;
	return &number;
}
int main( void )
{
	int *ptr = ::getNumber();
	cout<<"Number : "<<*ptr<<endl;
	return 0;
}
