#include <iostream>
using namespace std;
#include<iomanip>

int main(void)
{
	int num=50;
	cout<<"Number = "<<setw(8)<<num;//set width

	double f =3.14159;
	cout << setprecision(5) << f << '\n';
	return 0;
}


