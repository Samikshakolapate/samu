#include <iostream>
using namespace std;

class Point
{
private:
	int x;
	int y;
public:
	//constructor
	//parameterless constructor / default constructor
	Point()
	{
		x=10;
		y=20;
	}
	Point(int val)
	{
		this->x=val;
		this->y=val;
	}

};

int main()
{
	cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!
	return 0;
}
