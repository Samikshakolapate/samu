#include <iostream>
using namespace std;

class Complex
{
public:
	int real;
	int imag;
};

void accept()
{
	Complex c;
	cout<<"Enter real value";
	cin>>c.real;
	cout<<"Enter imag value";
	cin>>c.imag;
}

void disp(Complex c)
{
	cout<<"Real : "<<c.real;
	cout<<"Imag : "<<c.imag;

}

int main()
{
	Complex c; //object of Complex class
	::accept();
	::disp();
	return 0;
}



class Complex
{
private:
	int real;
	int imag;
public:
	void accept();
	void disp();
};

void Complex::accept()
{
	cout<<"Enter real value";
	cin>>this->real;
	cout<<"Enter imag value";
	cin>>this->imag;
}

void Complex::disp()
{
	cout<<"Real : "<<this->real;
	cout<<"Imag : "<<this->imag;

}

int main()
{
	Complex c; //object of Complex class
	c.accept();
	c.disp();
	return 0;
}
