#include <iostream>
using namespace std;

class A
{
public:
	void sum(); //friend void sum();
};
class B
{
private:
	int num1=30,num2=10;
public:
	friend class A;//friend class classname;
};

void A::sum()
{
	B obj;
	int result;
	result=obj.num1+obj.num2;
	cout<<result;
}

int main()
{

	A aobj;
	aobj.sum();

	return 0;
}



