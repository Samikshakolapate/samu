#include <iostream>
using namespace std;

class student
{
  public:
    //creating pure virtual function
    virtual void details()=0;
};
//declaring Derived class
class Info:public student
{
    public:
        void details()
        {
            cout<<"Inside details function of Info class"<<endl;
        }
};
int main()
{
    student *s;
    Info i;
    	s=&i;
       s->details();
       return 0;
   }
