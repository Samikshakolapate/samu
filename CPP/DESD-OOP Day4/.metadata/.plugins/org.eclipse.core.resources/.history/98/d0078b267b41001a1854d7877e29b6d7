#include <iostream>
using namespace std;

class Test
{
private:
	int num1=100;
public:
	Test()
	{
		num1=0;
	}
	friend void disp();
};

void disp()
{
	Test t;
	cout<<t.num1;
}

int main()
{
	cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!
	return 0;
}
