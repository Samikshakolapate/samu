#include <iostream>
using namespace std;

class A
{
private:
	int num1;
public:
	friend void sum(int num1,int num2);
};

class B
{
private:
	int num2;
public:
	friend void sum(int num1,int num2);
};

void sum(int num1,int num2)
{
	A aobj;
	B bobj;
	cout<<"Num1 "<<aobj.num1<<endl;
	cout<<"Num2 "<<bobj.num2<<endl;
	int result;
	result=aobj.num1+bobj.num2;
	cout<<"\n Addition = "<<result;
}

int main(void)
{
	sum(20,10);
	return 0;
}

