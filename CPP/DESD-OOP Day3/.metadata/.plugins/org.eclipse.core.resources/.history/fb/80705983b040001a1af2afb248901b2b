#include <iostream>
using namespace std;

int main()
{
	//allocate a memory to single variable
	int *ptr=new int;
	//int *ptr = ( int* )::operator new( sizeof( int ) * 1 );
	*ptr=100;
	cout<<"ptr="<<*ptr;

	//if we do not write delete ptr;
		//and ptr=NULL
	//this will cause dangling pointer and memory leakage
	delete ptr;
	ptr=NULL;
	return 0;
}
