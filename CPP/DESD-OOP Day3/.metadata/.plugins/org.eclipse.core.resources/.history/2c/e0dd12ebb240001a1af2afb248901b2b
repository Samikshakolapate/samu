#include <iostream>
#include<string>
using namespace std;
class Product
{
private:
	string name;
	static int price;
public:
	Product()
	{
		this->name="";

	}
	void setPrice(int price)
	{
		this->price=price;
	}

	void disp()
	{
		cout<<"\n Product name "<<this->name;
		cout<<"\n Product Price "<<this->price;
	}

};

int main()
{
	cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!
	return 0;
}
