#include <iostream>
using namespace std;
template<class T>
class Array // Parameterized type
{
private:
	int size;
	T *arr; //char *arr;
	public:
	Array( void ) : size( 0 ), arr( NULL )
	{
	}
	Array( int size )
	{
	this->size = size;
	this->arr = new T[ this->size ];
	}
	void acceptRecord( void )
	{
		cout<<"Enter Elements";
		for(int i=0;i<3;i++)
			cin>>arr[i];
	}
	void printRecord( void )
	{

		cout<<"\n  Elements are : ";
		for(int i=0;i<3;i++)
			cout<<arr[i];
	}
	~Array( void ){ }
};

int main(void)
{
Array<char> a1( 3 );
a1.acceptRecord();
a1.printRecord();
return 0;
}
