#include <iostream>
using namespace std;
class Point
{
private:
	int x;
	int y;
public:
	Point()
	{
		this->x=0;
		this->y=0;
	}

	Point(int x,int y)
		{
			this->x=x;
			this->y=y;
		}

	void sum();
};

void Point::sum()
{
	int res=this->x+this->y;
	cout<<res;
}

int main()
{
	Point pt1(10,20);
	pt1.sum();
	Point pt2(10,20);
	pt2.sum();
	Point pt3=pt1+pt2;//not allowed
	//to allow this we need to overload operator+
	return 0;
}
