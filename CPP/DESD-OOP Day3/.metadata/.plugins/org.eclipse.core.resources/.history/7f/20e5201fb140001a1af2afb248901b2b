#include <iostream>
using namespace std;

int main(void)
{
	int *ptrArr=new int[4];
	//int *ptr = ( int *)::operator new[](4 * sizeof( int ) );

	cout<<"Enter array elements";
	for(int i=0;i<4;i++)
	{
		cin>>ptrArr[i];
	}

	cout<<"\n Elements are";
	for(int i=0;i<4;i++)
		{
			cout<<"  "<<ptrArr[i];
		}


	return 0;
}


