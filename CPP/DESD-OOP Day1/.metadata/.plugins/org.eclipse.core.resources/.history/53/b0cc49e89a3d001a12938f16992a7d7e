#include <iostream>
using namespace std;

class Complex
{
private:
	int real; //data members  of class Complex
	int imag;
public:
	//member function of class Complex
	void accept();
	void disp(int r,int i);
};

void Complex :: accept()
{
	cout<<"Enter real number value";
	cin>>real;
	cout<<"Enter imag value";
	cin>>imag;
}

void Complex :: disp(int r,int i)
{
	cout<<"Real="<<r;
	cout<<"Imag="<<i;
}





