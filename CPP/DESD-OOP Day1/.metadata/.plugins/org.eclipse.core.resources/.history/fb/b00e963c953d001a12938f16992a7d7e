#include <iostream>
using namespace std;

//function overloading
//same function name with different number of arguments
void print();
void print(int a);
void print(int a,int b);
void print(char ch);
int main()
{

	print();
	print(10);
	print(1,2);
	print('A');
	return 0;
}

void print()
{
	cout<<"inside no argument function"<<endl;
}
void print(int a)
{
	cout<<"Inside int block "<<a<<endl;
}
void print(int a,int b)
{
	cout<<"Inside int int block"<<a<<b<<endl;
}

void print(char ch)
{
	cout<<"inside char block"<<ch;
}
