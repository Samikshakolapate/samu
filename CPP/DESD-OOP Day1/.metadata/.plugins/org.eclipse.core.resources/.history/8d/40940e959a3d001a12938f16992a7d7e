#include <iostream>
using namespace std;

class Complex
{
private:
	int real; //data members  of class Complex
	int imag;
public:
	//member function of class Complex
	void accept();
	void disp();
};

void Complex :: accept()
{
	cout<<"Enter real number value";
	cin>>real;
	cout<<"Enter imag value";
}

void Complex :: disp()
{
	cout<<"Real="<<real;
	cout<<"Imag="<<imag;
}


int main() {
	cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!
	return 0;
}
