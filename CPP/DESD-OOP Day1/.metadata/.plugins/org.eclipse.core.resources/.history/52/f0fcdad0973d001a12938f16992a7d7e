#include <iostream>
using namespace std;

int num=10; //global variable

namespace na //namespace definition
{
	int num=20; //namespace variable
}

namespace nb
{
	int num=40;
	namespace nc
	{
		int num=50;
	}
}

int main()
{
	int num=30;  //local variable
	cout<<"Local Variable"<<num<<endl;
	cout<<"Global Variable"<<::num<<endl;//:: scope resolution operator
	cout<<"Variable of namespace na"<<na::num<<endl;
	return 0;
}
